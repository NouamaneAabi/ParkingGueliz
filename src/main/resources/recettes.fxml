<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.parkingmanager.controller.RecettesController" spacing="20" style="-fx-padding: 20;">
    <children>
        <Label text="Recettes" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        
        <HBox spacing="15" alignment="CENTER_LEFT">
            <children>
                <Label text="Date:" />
                <DatePicker fx:id="datePicker" onAction="#chargerRecettes" />
                <Button text="Actualiser" onAction="#chargerRecettes" style="-fx-background-color: #4caf50; -fx-text-fill: white;" />
            </children>
        </HBox>
        
        <Label fx:id="recettesDuJourLabel" text="Recettes du jour: 0.00 €" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #4caf50;" />
        
        <Label text="Détail des Paiements" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <TableView fx:id="paiementsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="immatriculationColumn" text="Immatriculation" prefWidth="150" />
                <TableColumn fx:id="montantColumn" text="Montant (€)" prefWidth="150" />
                <TableColumn fx:id="dateColumn" text="Date et Heure" prefWidth="200" />
            </columns>
        </TableView>
    </children>
</VBox>





